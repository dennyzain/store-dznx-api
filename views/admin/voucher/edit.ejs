<%- include ../../partials/header.ejs %> <%- include ../../partials/navbar.ejs %> <%- include
../../partials/sidebar.ejs %>

<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Ubah</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/voucher">Voucher</a></li>
            <li class="breadcrumb-item active">Ubah</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card card-primary">
            <div class="card-header">
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form action="/voucher/edit/<%- voucher._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
              <div class="card-body">
                <div class="form-group">
                  <div class="form-group">
                    <label for="name">Nama Game</label>
                    <input
                      type="text"
                      class="form-control"
                      name="name"
                      id="name"
                      value="<%= voucher.name %>"
                      placeholder="Masukkan Nama Kategori"
                    />
                  </div>
                  <label >Nama Kategori</label>
                  <select class="form-control select2" style="width: 100%"  name="category" required>
                      <option value="<%= voucher.category._id %>"><%= voucher.category.name %></option>
                  </select>
                </div>
                <div class="form-group">
                  <label>Nominal</label>
                  <div class="select2-purple">
                    <select class="form-control select2 select2-purple" multiple="multiple" data-placeholder="Pilih Nominal" data-dropdown-css-class="select2-purple" style="width: 100%;" name="nominals" required>
                      <% voucher.nominals.forEach(function(data) { %>
                        <option value="<%= data._id %>"><%= data.coinName %> - <%= data.coinQuantity %></option>
                      <% }) %>
                    </select>
                  </div>
                </div>
                <div class="form-group">
                  <label for="image">Nama Game</label>
                  <input
                    type="file"
                    class="form-control"
                    name="image"
                    id="image"
                    placeholder="Masukkan Gambar"
                  />
                </div>
                <br>
                <img src="https://store-dznx.herokuapp.com/uploads/<%= voucher.thumbnail %>" style="width: 30%; height: 30%;" id="preview">
                  <div class="card-footer">
                <button type="submit"  class="btn btn-primary">Ubah</button>
              </div>
            </form>
          </div>
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>

<%- include ../../partials/footer.ejs %> <%- include ../../partials/js.ejs %>
<script>
  function readURL(input){
    if(input.files && input.files[0]){
      const reader=new FileReader()
      reader.onload=function(e){
        $('#preview').attr('src',e.target.result)
        $('#preview').attr('height','20%')
        $('#preview').attr('width', '20%')
      }
      reader.readAsDataURL(input.files[0])
    }
  }
$('#image').change(function(){
  readURL(this)
})  
</script>